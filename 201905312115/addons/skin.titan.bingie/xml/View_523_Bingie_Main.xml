<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<includes>
    <include name="View_523_Bingie_Main">
        <!--Panel-->
        <control type="group">
            <width>100%</width>
            <height>100%</height>
            <visible>Control.IsVisible(523)</visible>
            <include>animation_view_change</include>

            <!-- background image + overlay -->
            <control type="image">
                <visible>!$EXP[IsPlayingRecognizedContent]</visible>
                <include>FullscreenDimensions</include>
                <texture background="true" colordiffuse="$VAR[BingiePanelColor]">colors/color_white.png</texture>
            </control>

            <!-- trailer window -->
            <control type="group" id="523001">
                <visible>Player.HasVideo + !String.IsEmpty(Window(Home).Property(TrailerPlaying)) + [Skin.HasSetting(DetailsAutoTrailer) | Skin.HasSetting(PlayTrailerOnUp)]</visible>
                <top>0</top>
                <right>0</right>
                <width>1220</width>
                <height>680</height>
                <animation effect="slide" start="0" end="0,-80" time="0" condition="Integer.IsEqual(VideoPlayer.VideoAspect,2.4) | Integer.IsEqual(VideoPlayer.VideoAspect,2.35) | Integer.IsEqual(VideoPlayer.VideoAspect,2.55) | Integer.IsEqual(VideoPlayer.VideoAspect,2.76)" reversible="true">Conditional</animation>
                <control type="videowindow">
                    <visible>!$EXP[IsRecognizedVideoContent]</visible>
                </control>
                <control type="image">
                    <texture background="true" colordiffuse="$VAR[BingiePanelColor]" border="20">overlays/bingie_corner.png</texture>
                </control>
            </control>
            <!--trailer window fades in -->
            <control type="image">
                <visible>Control.IsVisible(523001)</visible>
                <top>0</top>
                <right>0</right>
                <width>1410</width>
                <height>790</height>
                <aligny>top</aligny>
                <aspectratio>scale</aspectratio>
                <colordiffuse>$VAR[BingiePanelColor]</colordiffuse>
                <texture background="true" border="15">diffuse/bgpanel.png</texture>
                <animation type="Visible">
                    <effect type="fade" start="100" end="100" time="600"/>
                    <effect type="fade" start="100" end="0" time="1200" delay="800"/>
                </animation>
            </control>

            <control type="image">
                <visible>!$EXP[IsPlayingRecognizedContent]</visible>
                <fadetime>350</fadetime>
                <texture background="true">$VAR[backgroundVar]</texture>
                <aspectratio aligny="top">scale</aspectratio>
                <animation effect="zoom" start="110" end="130" center="auto" time="12000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
                <animation effect="slide" start="-10,-10" end="10,10" time="8000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
                <animation effect="fade" end="0" time="600">Hidden</animation>
                <animation effect="fade" start="0" end="100" time="1400">Visible</animation>
                <visible>!Skin.HasSetting(View523_DetailsShowFanart) + !Control.IsVisible(523001)</visible>
            </control>

            <!-- overlay without big thumb -->
            <control type="image">
                <visible>!$EXP[IsPlayingRecognizedContent]</visible>
                <width>100%</width>
                <height>100%</height>
                <texture background="true" colordiffuse="$VAR[BingiePanelColor]">colors/color_white.png</texture>
                <animation effect="fade" start="100" end="70" delay="0" time="0" condition="true">Conditional</animation>
                <animation effect="fade" end="0" time="600">Hidden</animation>
                <animation effect="fade" start="40" end="70" time="1400">Visible</animation>
                <visible>!Skin.HasSetting(View523_DetailsShowFanart) + !Control.IsVisible(523001)</visible>
            </control>
            <control type="image">
                <visible>!$EXP[IsPlayingRecognizedContent]</visible>
                <width>100%</width>
                <height>100%</height>
                <texture background="true" colordiffuse="$VAR[BingiePanelColor]">special://home/addons/resource.images.backgroundoverlays.basic/resources/Side by Side.png</texture>
                <animation effect="fade" start="100" end="95" delay="0" time="0"  condition="true">Conditional</animation>
                <animation effect="fade" end="0" time="600">Hidden</animation>
                <animation effect="fade" start="50" end="95" time="1400">Visible</animation>
                <visible>!Skin.HasSetting(View523_DetailsShowFanart) + !Control.IsVisible(523001)</visible>
            </control>

            <!-- spotlight section -->
            <control type="group" id="3505">
                <width>1920</width>
                <height>600</height>

                <!-- spotlight image [16:9] -->
                <control type="image">
                    <visible>!$EXP[IsPlayingRecognizedContent]</visible>
                    <visible>!Control.IsVisible(523001) + Skin.HasSetting(View523_DetailsShowFanart)</visible>
                    <right>0</right>
                    <top>0</top>
                    <texture background="true" diffuse="special://home/addons/resource.images.backgroundoverlays.basic/resources/Right Corner.png">$VAR[bingieThumb]</texture>
                    <fadetime>550</fadetime>
                    <width>1400</width>
                    <height>787</height>
                    <aspectratio scalediffuse="true" aligny="top">scale</aspectratio>
                    <animation effect="fade" end="0" time="600">Hidden</animation>
                    <animation effect="fade" start="0" end="100" time="1400">Visible</animation>
                </control>

                <!-- bingie details -->
                <control type="grouplist">
                    <width>1500</width>
                    <posx>65</posx>
                    <posy>10</posy>
                    <orientation>vertical</orientation>
                    <usecontrolcoords>true</usecontrolcoords>
                    <itemgap>10</itemgap>
                    <!-- adjust for episode info -->
                    <animation effect="slide" start="0" end="0,75" time="0" condition="Control.IsVisible(588688) + !Control.IsVisible(5444322)">Conditional</animation>

                    <!-- Title -->
                    <!-- clearlogo [800x310] -->
                    <control type="image" id="29475">
                        <visible>!Skin.HasSetting(NoClearLogoBingie) + !String.IsEmpty(Control.GetLabel(29475))</visible>
                        <height>186</height>
                        <width>480</width>
                        <align>left</align>
                        <aspectratio align="left" aligny="center">keep</aspectratio>
                        <texture background="true">$VAR[ListItemClearLogo]</texture>
                    </control>
                    <!-- text title -->
                    <control type="textbox" id="29476">
                        <visible>String.IsEmpty(Control.GetLabel(29475)) | Skin.HasSetting(NoClearLogoBingie)</visible>
                        <top>55</top>
                        <height max="175">auto</height>
                        <width max="815">auto</width>
                        <font>Reg48</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$VAR[View523_FallbackTitle]</label>
                        <animation effect="fade" time="200">Visible</animation>
                        <!-- adjust for genres -->
                        <animation effect="slide" start="0,0" end="0,170" time="0" condition="[Container.Content(genres) | String.IsEqual(ListItem.DBTYPE,genre)]">Conditional</animation>
                    </control>

                    <!-- spotlight row details -->
                    <control type="group">
                        <width>1000</width>
                        <height>40</height>
                        <include>Default_Visible_Fade</include>
                        <include>SpotlightRowDetails</include>
                    </control>

                    <!-- bingie sublabel -->
                    <control type="label" id="823">
                        <visible>!Container.Content(episodes) + !String.IsEmpty(Control.GetLabel(823))</visible>
                        <height>30</height>
                        <width>800</width>
                        <font>Reg28</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <textcolor>$INFO[Skin.String(BingieSubLabelTextColor)]</textcolor>
                        <label>$VAR[BingieSublabel]</label>
                        <include>Default_Visible_Fade</include>
                    </control>

                    <!-- episode info -->
                    <control type="grouplist" id="588688">
                        <visible>Container.Content(seasons) | Container.Content(episodes)</visible>
                        <orientation>vertical</orientation>
                        <height>125</height>
                        <width>1000</width>
                        <include>Default_Visible_Fade</include>
                        <!-- season x episode x & title -->
                        <control type="label">
                            <height>85</height>
                            <width>1000</width>
                            <font>Reg40</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                            <label>$VAR[View523_EpisodeInfoLabel]</label>
                            <animation effect="zoom" end="115" condition="Container.Content(seasons)">Conditional</animation>
                        </control>
                        <!-- progress bar & continue label -->
                        <control type="group">
                            <visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
                            <width>1000</width>
                            <height>40</height>
                            <aligny>center</aligny>
                            <!-- Progress bar -->
                            <control type="progress">
                                <description>progress bar</description>
                                <top>11</top>
                                <width>150</width>
                                <height>8</height>
                                <texturebg colordiffuse="cc515151" border="2">colors/color_white.png</texturebg>
                                <lefttexture/>
                                <midtexture colordiffuse="$INFO[Skin.String(OSDProgressBarColor)]" border="2">colors/color_white.png</midtexture>
                                <righttexture/>
                                <info>ListItem.PercentPlayed</info>
                            </control>
                            <!--continue watching -->
                            <control type="label">
                                <left>175</left>
                                <height>30</height>
                                <width>600</width>
                                <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                                <label>[CAPITALIZE]$LOCALIZE[31535][/CAPITALIZE]</label>
                            </control>
                        </control>
                    </control>

                    <!-- plot -->
                    <control type="textbox" id="5444322">
                        <visible>!Container.Content(seasons)</visible>
                        <height min="50" max="138">auto</height>
                        <width>650</width>
                        <textcolor>$VAR[BingiePlotTextColor]</textcolor>
                        <align>justify</align>
                        <font>Reg28</font>
                        <label>$VAR[ViewsPlotWithOutline]</label>
                        <include>Default_Visible_Fade</include>
                    </control>

                    <!-- additional info -->
                    <control type="group">
                        <top>10</top>
                        <visible>!Control.IsVisible(588688)</visible>
                        <include condition="!Skin.HasSetting(DisableBingieMoreDetailsInViews)">Bingie_Additional_Info</include>
                    </control>

                </control>

                <control type="group">
                    <visible>!Skin.HasSetting(NoFooterBar)</visible>
                    <animation effect="fade" start="100" end="0" time="600"  condition="Control.IsVisible(523001) + Skin.HasSetting(HideMediaFlagsTrailer)">Conditional</animation>
                    <top>550</top>
                    <width>100%</width>
                    <!-- media flags -->
                    <control type="group">
                        <top>30</top>
                        <posx>65</posx>
                        <height>50</height>
                        <include condition="Skin.HasSetting(DisableBingieMoreDetailsInViews)">mediaflags</include>
                    </control>
                    <!-- ratings & studio -->
                    <control type="group">
                        <right>30</right>
                        <height>90</height>
                        <width>1000</width>
                        <include>View_523_RatingsAndStudio_Hor</include>
                    </control>
                </control>
            </control>

            <!-- menu button -->
            <control type="radiobutton" id="5001">
                <width>60</width>
                <height>60</height>
                <right>20</right>
                <top>20</top>
                <font/>
                <selected>Control.HasFocus(5001)</selected>
                <texturefocus/>
                <texturenofocus/>
                <textureradioofffocus colordiffuse="$INFO[Skin.String(ButtonTextFocusColor)]">touchcontrols/icon_back.png</textureradioofffocus>
                <textureradioonfocus colordiffuse="$INFO[Skin.String(ButtonTextFocusColor)]">touchcontrols/icon_back.png</textureradioonfocus>
                <textureradiooffnofocus colordiffuse="$INFO[Skin.String(ButtonTextColor)]">touchcontrols/icon_back.png</textureradiooffnofocus>
                <textureradioonnofocus colordiffuse="$INFO[Skin.String(ButtonTextColor)]">touchcontrols/icon_back.png</textureradioonnofocus>
                <radiowidth>60</radiowidth>
                <radioheight>60</radioheight>
                <onclick>Close</onclick>
                <visible>Skin.HasSetting(EnableTouchSupport) + !Window.IsActive(Home)</visible>
                <ondown>510</ondown>
            </control>

            <!-- Content Header -->
            <control type="textbox" id="544323">
                <top>620</top>
                <width>96%</width>
                <height>40</height>
                <font>Reg28</font>
                <include condition="Skin.HasSetting(WidgetAlignRight)">widget_header_rightalign</include>
                <include condition="!Skin.HasSetting(WidgetAlignRight)">widget_header_leftalign</include>
                <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                <label>$VAR[View523ContentHeader,[B],[/B]]</label>
                <visible>!String.IsEmpty(Control.GetLabel(544323))</visible>
            </control>

            <!-- View 523 -->
			<control type="group">
                <left>60</left>
                <include condition="!Skin.HasSetting(View523_UseFixedLayout) | !Skin.HasSetting(View_523_HorizontalNavigation)">Panel_View523_Layout</include>
                <include condition="Skin.HasSetting(View523_UseFixedLayout) + Skin.HasSetting(View_523_HorizontalNavigation)">Fixedlist_View523_Layout</include>
            </control>

            <include content="View523_Fixed_Frame" condition="Skin.HasSetting(View523_SwapPoster)">
                <param name="width" value="254" />
                <param name="height" value="368" />
                <param name="texture" value="$INFO[Skin.String(thumbsborder_focused),bingie/border/poster_fo_,.png]" />
                <param name="xAxisAnim" value="262" />
                <param name="yAxisAnim" value="380" />
            </include>
            <include content="View523_Fixed_Frame" condition="!Skin.HasSetting(View523_SwapPoster)">
                <param name="width" value="372" />
                <param name="height" value="210" />
                <param name="texture" value="$INFO[Skin.String(thumbsborder_focused),bingie/border/thumb_fo_,.png]" />
                <param name="xAxisAnim" value="366" />
                <param name="yAxisAnim" value="210" />
            </include>

            <!--vertical Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(523) + Integer.IsGreater(Container.NumItems,0) + !Skin.HasSetting(View_523_HorizontalNavigation)</visible>
                    <top>670</top>
                    <width>15</width>
                    <right>3</right>
                    <bottom>10</bottom>
					<onleft>523</onleft>
					<orientation>vertical</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
				</control>
			</control>
            <!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(523) + Integer.IsGreater(Container.NumItems,0) + Skin.HasSetting(View_523_HorizontalNavigation)</visible>
                    <left>60</left>
                    <width>1800</width>
					<height>15</height>
                    <bottom>2</bottom>
					<onup>523</onup>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
				</control>
			</control>
        </control>
 	</include>

    <!-- fixedlist layout decoration -->
    <include name="Fixedlist_View523_Layout">
        <control type="fixedlist" id="523">
            <include condition="Skin.HasSetting(View523_SwapPoster)">View523_Layout_Poster</include>
            <include condition="!Skin.HasSetting(View523_SwapPoster)">View523_Layout_Thumb</include>
        </control>
    </include>

    <!-- panel layout decoration -->
    <include name="Panel_View523_Layout">
        <control type="panel" id="523">
            <include condition="Skin.HasSetting(View523_SwapPoster)">View523_Layout_Poster</include>
            <include condition="!Skin.HasSetting(View523_SwapPoster)">View523_Layout_Thumb</include>
        </control>
    </include>

    <!-- thumbs layout -->
    <include name="View523_Layout_Thumb">
        <focusedposition>0</focusedposition>
            <viewtype label="31018">bigicons</viewtype>
            <top>660</top>
            <width>1838</width>
            <itemgap>0</itemgap>
            <include condition="Skin.HasSetting(View_523_HorizontalNavigation)">navigation_horizontal</include>
            <orientation>vertical</orientation>
            <include condition="Skin.HasSetting(View_523_HorizontalNavigation)">View523_Navigation_Horizontal_Height</include>
            <height>419</height>
            <scrolltime tween="sine" easing="out">500</scrolltime>
            <onright condition="!Skin.HasSetting(View_523_HorizontalNavigation) + Skin.HasSetting(EnableQuickJump)">6000</onright>
            <onright condition="!Skin.HasSetting(View_523_HorizontalNavigation) + !Skin.HasSetting(EnableQuickJump)">60</onright>
            <onright condition="Skin.HasSetting(View_523_HorizontalNavigation)">523</onright>
            <onleft condition="!Skin.HasSetting(KioskMode)">9000</onleft>
            <onup condition="!Skin.HasSetting(View_523_HorizontalNavigation)">523</onup>
            <ondown condition="Skin.HasSetting(View_523_HorizontalNavigation) + Skin.HasSetting(EnableQuickJump)">7000</ondown>
            <ondown condition="Skin.HasSetting(View_523_HorizontalNavigation) + !Skin.HasSetting(EnableQuickJump)">60</ondown>
            <ondown condition="!Skin.HasSetting(View_523_HorizontalNavigation)">523</ondown>
            <preloaditems>4</preloaditems>
            <pagecontrol>60</pagecontrol>
        <visible>String.IsEqual(Window(Home).Property(SkinHelper.ForcedView),523) | String.IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
            <!-- normal -->
            <itemlayout height="210" width="366" condition="!Container.Content(seasons) + !Container.Content(episodes)">
                <control type="group">
                    <width>372</width>
                    <height>210</height>
                    <control type="image">
                        <!--Panel Normal-->
                        <texture background="true">home/home_matte2.png</texture>
                        <colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                        <include>thumbsborder_unfocused</include>
                    </control>
                    <include>ThumbsViewItemLayout</include>
                    <control type="group">
                        <description>widget label overlay</description>
                        <include condition="!String.IsEqual(Skin.String(Widgets_DisplayTags),disable)">ThumbsTagOverlay</include>
                        <include condition="String.IsEqual(Skin.String(Widgets_DisplayTags),auto)">LandscapeTagOverlayVisibility</include>
                    </control>
                </control>
            </itemlayout>
            <!-- seasons -->
            <itemlayout height="380" width="262" condition="Container.Content(seasons)">
                <control type="group">
                    <width>97%</width>
                    <height>97%</height>
                    <include>PosterPanelLayout</include>
                </control>
            </itemlayout>
            <!-- episodes -->
            <itemlayout height="419" width="549" condition="Container.Content(episodes)">
                <control type="group">
                    <width>549</width>
                    <height>312</height>
                    <include>ThumbsViewLayout</include>
                    <control type="group">
                        <description>widget label overlay</description>
                        <include condition="!String.IsEqual(Skin.String(Widgets_DisplayTags),disable)">ThumbsTagOverlay</include>
                        <include condition="String.IsEqual(Skin.String(Widgets_DisplayTags),auto)">LandscapeTagOverlayVisibility</include>
                    </control>
                </control>
            </itemlayout>
            <!-- normal -->
            <focusedlayout height="210" width="366" condition="!Container.Content(seasons) + !Container.Content(episodes)">
                <control type="group">
                    <width>372</width>
                    <height>210</height>
                    <control type="image">
                        <!--Panel Normal-->
                        <visible>Skin.HasSetting(DisableFixedBingieFrame)</visible>
                        <texture background="true">home/home_matte2.png</texture>
                        <colordiffuse>$VAR[ViewDetailsBorderFocusColor]</colordiffuse>
                        <include>thumbsborder_focused</include>
                    </control>
                    <include>ThumbsViewItemLayout</include>
                    <control type="group">
                        <description>widget label overlay</description>
                        <include condition="!String.IsEqual(Skin.String(Widgets_DisplayTags),disable)">ThumbsTagOverlay</include>
                        <include condition="String.IsEqual(Skin.String(Widgets_DisplayTags),auto)">LandscapeTagOverlayVisibility</include>
                    </control>
                    <include>AutoTrailerButton</include>
                    <animation effect="zoom" end="103,103" center="auto" time="100" condition="Skin.HasSetting(View523_EnableZoomEffect)">focus</animation>
                </control>
            </focusedlayout>
            <!-- seasons -->
            <focusedlayout height="380" width="262" condition="Container.Content(seasons)">
                <control type="group">
                    <width>97%</width>
                    <height>97%</height>
                    <include>PosterPanelLayoutFocus</include>
                    <include>AutoTrailerButton</include>
                    <animation effect="zoom" end="110,110" center="auto" time="100" condition="Skin.HasSetting(View523_EnableZoomEffect)">focus</animation>
                </control>
            </focusedlayout>
            <!-- episodes -->
            <focusedlayout height="419" width="549" condition="Container.Content(episodes)">
                <control type="group">
                    <width>549</width>
                    <height>312</height>
                    <include>ThumbsViewLayoutFocus</include>
                    <control type="group">
                        <description>widget label overlay</description>
                        <include condition="!String.IsEqual(Skin.String(Widgets_DisplayTags),disable)">ThumbsTagOverlay</include>
                        <include condition="String.IsEqual(Skin.String(Widgets_DisplayTags),auto)">LandscapeTagOverlayVisibility</include>
                    </control>
                    <include>AutoTrailerButton</include>
                    <animation effect="zoom" end="103,103" center="auto" time="100" condition="Skin.HasSetting(View523_EnableZoomEffect)">focus</animation>
                </control>
            </focusedlayout>
    </include>

    <!-- poster layout -->
    <include name="View523_Layout_Poster">
        <focusedposition>0</focusedposition>
            <viewtype label="31018">bigicons</viewtype>
            <bottom>0</bottom>
            <top>660</top>
            <height>380</height>
            <width>1842</width>
            <itemgap>0</itemgap>
            <include condition="Skin.HasSetting(View_523_HorizontalNavigation)">navigation_horizontal</include>
            <orientation>vertical</orientation>
            <scrolltime tween="sine" easing="out">500</scrolltime>
            <onright condition="!Skin.HasSetting(View_523_HorizontalNavigation) + Skin.HasSetting(EnableQuickJump)">6000</onright>
            <onright condition="!Skin.HasSetting(View_523_HorizontalNavigation) + !Skin.HasSetting(EnableQuickJump)">60</onright>
            <onright condition="Skin.HasSetting(View_523_HorizontalNavigation)">523</onright>
            <onleft condition="!Skin.HasSetting(KioskMode)">9000</onleft>
            <onup condition="!Skin.HasSetting(View_523_HorizontalNavigation)">523</onup>
            <!-- play trailer onup -->
            <onup condition="!Player.HasVideo + Skin.HasSetting(View_523_HorizontalNavigation) + Skin.HasSetting(PlayTrailerOnUp) + [Container.Content(movies) | Container.Content(tvshows)]">SetProperty(BounceUp,1,Home)</onup>
            <onup condition="!Player.HasVideo + Skin.HasSetting(View_523_HorizontalNavigation) + Skin.HasSetting(PlayTrailerOnUp) + [!String.IsEmpty(ListItem.Trailer) + Container.Content(movies)]">RunScript(script.skin.helper.service,ACTION=playtrailer,MODE=windowed,YOUTUBE=$INFO[Skin.String(AutoYoutubeTrailer)])</onup>
            <onup condition="!Player.HasVideo + Skin.HasSetting(View_523_HorizontalNavigation) + Skin.HasSetting(PlayTrailerOnUp) + [Container.Content(tvshows)]">RunScript(script.bingie.helper,action=playtrailer,title=$VAR[TVShowTitle],tvshow=true,youtube=$INFO[Skin.String(AutoYoutubeTrailer)])</onup>
            <onup condition="!Player.HasVideo + Skin.HasSetting(View_523_HorizontalNavigation) + Skin.HasSetting(PlayTrailerOnUp) + Skin.String(AutoYoutubeTrailer,true) + [String.IsEmpty(ListItem.Trailer) + Container.Content(movies)]">RunScript(script.bingie.helper,action=playtrailer,title=$INFO[ListItem.Title])</onup>
            <ondown condition="Skin.HasSetting(View_523_HorizontalNavigation) + Skin.HasSetting(EnableQuickJump)">7000</ondown>
            <ondown condition="Skin.HasSetting(View_523_HorizontalNavigation) + !Skin.HasSetting(EnableQuickJump)">60</ondown>
            <ondown condition="!Skin.HasSetting(View_523_HorizontalNavigation)">523</ondown>
            <preloaditems>4</preloaditems>
            <pagecontrol>60</pagecontrol>
        <visible>String.IsEqual(Window(Home).Property(SkinHelper.ForcedView),523) | String.IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
            <!-- normal -->
            <itemlayout height="380" width="262" condition="!Container.Content(episodes)">
                <control type="group">
                    <width>97%</width>
                    <height>97%</height>
                    <include>PosterPanelLayout</include>
                </control>
            </itemlayout>
            <!-- episodes -->
            <itemlayout height="380" width="549" condition="Container.Content(episodes)">
                <control type="group">
                    <width>549</width>
                    <height>312</height>
                    <include>ThumbsViewLayout</include>
                    <control type="group">
                        <description>widget label overlay</description>
                        <include condition="!String.IsEqual(Skin.String(Widgets_DisplayTags),disable)">ThumbsTagOverlay</include>
                        <include condition="String.IsEqual(Skin.String(Widgets_DisplayTags),auto)">LandscapeTagOverlayVisibility</include>
                    </control>
                </control>
            </itemlayout>
            <!-- normal -->
            <focusedlayout height="380" width="262" condition="!Container.Content(episodes)">
                <control type="group">
                    <width>97%</width>
                    <height>97%</height>
                    <control type="image">
                        <visible>Skin.HasSetting(DisableFixedBingieFrame)</visible>
                        <include>PosterThumbFO_Defs</include>
                        <include>thumbsborder_focused</include>
                    </control>
                    <include>PosterThumbLayout</include>
                    <include condition="!Window.IsActive(Home)">PosterTagOverlay</include>
                    <control type="group">
                        <include condition="Skin.HasSetting(CaseOverlays)">PosterCaseOverlay</include>
                    </control>
                    <control type="group">
                        <!--Watched Overlay-->
                        <right>8</right>
                        <top>8</top>
                        <include>WatchedIndicatorNormal</include>
                        <animation type="Conditional" condition="Skin.HasTheme(classic)">
                            <effect type="slide" end="3,-3" time="0"  />
                        </animation>
                    </control>
                    <include>AutoTrailerButton</include>
                    <animation effect="zoom" end="110,110" center="auto" time="100" condition="Skin.HasSetting(View523_EnableZoomEffect)">focus</animation>
                    <include>Bounce_Up</include>
                </control>
            </focusedlayout>
            <!-- episodes -->
            <focusedlayout height="380" width="549" condition="Container.Content(episodes)">
                <control type="group">
                    <width>549</width>
                    <height>312</height>
                    <include>ThumbsViewLayoutFocus</include>
                    <control type="group">
                        <description>widget label overlay</description>
                        <include condition="!String.IsEqual(Skin.String(Widgets_DisplayTags),disable)">ThumbsTagOverlay</include>
                        <include condition="String.IsEqual(Skin.String(Widgets_DisplayTags),auto)">LandscapeTagOverlayVisibility</include>
                    </control>
                    <include>AutoTrailerButton</include>
                    <animation effect="zoom" end="103,103" center="auto" time="100" condition="Skin.HasSetting(View523_EnableZoomEffect)">focus</animation>
                </control>
            </focusedlayout>
	</include>

    <include name="View523_Fixed_Frame">
        <control type="image">
            <visible>!Skin.HasSetting(DisableFixedBingieFrame) + Integer.IsGreater(Container(523).NumItems, 0) + Control.HasFocus(523)</visible>
            <visible>[!Container.Content(seasons) + !Container.Content(episodes)]</visible>
            <top>660</top>
            <left>60</left>
            <width>$PARAM[width]</width>
            <height>$PARAM[height]</height>
            <texture background="true" border="-4">$PARAM[texture]</texture>
            <colordiffuse>$VAR[ViewDetailsBorderFocusColor]</colordiffuse>
            <bordersize>8</bordersize>
            <include>Default_Visible_Fade</include>
            <!-- vertical - supporting up to 7 columns -->
            <animation effect="slide" end="$PARAM[xAxisAnim],0" time="150" condition="Integer.IsGreater(Container(523).Column, 0)">Conditional</animation>
            <animation effect="slide" end="$PARAM[xAxisAnim],0" time="150" condition="Integer.IsGreater(Container(523).Column, 1)">Conditional</animation>
            <animation effect="slide" end="$PARAM[xAxisAnim],0" time="150" condition="Integer.IsGreater(Container(523).Column, 2)">Conditional</animation>
            <animation effect="slide" end="$PARAM[xAxisAnim],0" time="150" condition="Integer.IsGreater(Container(523).Column, 3)">Conditional</animation>
            <animation effect="slide" end="$PARAM[xAxisAnim],0" time="150" condition="Integer.IsGreater(Container(523).Column, 4)">Conditional</animation>
            <animation effect="slide" end="$PARAM[xAxisAnim],0" time="150" condition="Integer.IsGreater(Container(523).Column, 5)">Conditional</animation>
            <!-- horizontal - supporting up to 2 rows -->
            <animation effect="slide" end="0,$PARAM[yAxisAnim]" time="200" condition="Skin.HasSetting(View_523_HorizontalNavigation) + Integer.IsGreater(Container(523).Row, 0)">Conditional</animation>
        </control>
    </include>

    <include name="View_523_RatingsAndStudio_Hor">
        <control type="grouplist">
            <orientation>horizontal</orientation>
            <height>90</height>
            <itemgap>15</itemgap>
            <align>right</align>
            <include condition="Skin.HasSetting(EnableMonochromeRatingInFooter)">Rating_Monochrome_Hor</include>
            <include condition="!Skin.HasSetting(EnableMonochromeRatingInFooter)">Rating_Color_Hor</include>
            <include condition="Skin.HasSetting(EnableStudioLogo)">StudioLogo</include>
        </control>
    </include>

